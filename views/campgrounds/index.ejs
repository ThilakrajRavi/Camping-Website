<% layout('layouts/boilerplate') %> 
    <h1>Index Page</h1>
    <h3>All campgrounds</h3>
    <a href="/campgrounds/new">Add campgrounds</a>
    <% for(let camp of campsName){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%= camp.image %>" alt="Not found">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="cart-title"><%= camp.name %></h5>
                        <p class="card-text"><%= camp.description %> </p>
                        <p class="card-text">
                            <small class="text-muted"><%= camp.location %> </small>    
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>">View <%= camp.name %></a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>  

